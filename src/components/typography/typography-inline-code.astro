---
import { cn } from "@/lib/utils";

interface Props {
  content?: string;
  class?: string;
  size?: "sm" | "base" | "lg" | "xl";
}

const { content, class: className, size = "base" } = Astro.props;

const sizeClasses = {
  sm: "prose-sm",
  base: "prose",
  lg: "prose-lg",
  xl: "prose-xl",
};
---

<code class={cn("bg-muted text-foreground px-1.5 py-0.5 rounded text-sm font-mono font-medium", sizeClasses[size], className)}>
  {content}
  <slot />
</code>
