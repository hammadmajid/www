---
import { cn } from "@/lib/utils";

interface Props {
  content?: string;
  class?: string;
  size?: "sm" | "base" | "lg" | "xl";
}

const { content, class: className, size = "base" } = Astro.props;

const sizeClasses = {
  sm: "prose-sm",
  base: "prose",
  lg: "prose-lg",
  xl: "prose-xl",
};
---

<blockquote class={cn("mt-6 border-l-2 pl-6 italic", sizeClasses[size], className)}>
  {content}
  <slot />
</blockquote>
