---
import { cn } from "@/lib/utils";

interface Props {
  content?: string;
  class?: string;
  size?: "sm" | "base" | "lg" | "xl";
}

const { content, class: className, size = "base" } = Astro.props;

const sizeClasses = {
  sm: "prose-sm",
  base: "prose",
  lg: "prose-lg",
  xl: "prose-xl",
};
---

<h1 class={cn("scroll-m-20 text-4xl font-extrabold tracking-tight text-balance", sizeClasses[size], className)}>
  {content}
  <slot />
</h1>
