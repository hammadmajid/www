---
import { cn } from "@/lib/utils";

export interface Props {
    type?: string | null | undefined;
    class?: string;
    [key: string]: any;
}

const { type, class: className, ...props } = Astro.props;

const classes = cn(
    "file:text-foreground placeholder:text-muted-foreground selection:bg-primary selection:text-primary-foreground bg-card/20 text-card-foreground flex h-9 w-full min-w-0 rounded-full border border-accent-foreground/20 backdrop-blur-md supports-[backdrop-filter]:bg-card/10 shadow-xl shadow-black/10 relative overflow-hidden px-4 py-1 text-base transition-[color,box-shadow] outline-none file:inline-flex file:h-7 file:border-0 file:bg-transparent file:text-sm file:font-medium disabled:pointer-events-none disabled:cursor-not-allowed disabled:opacity-50 md:text-sm",
    "before:absolute before:inset-0 before:bg-gradient-to-br before:from-accent-foreground/10 before:via-transparent before:to-transparent before:pointer-events-none before:rounded-full",
    "after:absolute after:inset-[1px] after:rounded-full after:bg-gradient-to-br after:from-white/15 after:via-transparent after:to-transparent after:pointer-events-none",
    "focus-visible:border-accent-foreground/40 focus-visible:ring-accent-foreground/20 focus-visible:ring-[3px]",
    "aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive",
    className,
);
---

<input type={type} data-slot="input" class={classes} {...props} />
