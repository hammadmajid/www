---
import Card from "@/components/ui/card.astro";
import {
    TypographyH2,
    TypographyH4,
    TypographyP,
    TypographyList,
    TypographySmall,
} from "@/components/typography";
---

<section id="home" class="space-y-6">
    <TypographyH2>About me</TypographyH2>

    <Card class="w-full gap-2 mb-6">
        <div slot="header">
            <p slot="description">whoami</p>
        </div>
        <div slot="content">
            <TypographyP>
                I'm Hammad Majid, a software developer passionate about building
                scalable and maintainable applications. I enjoy working with
                modern web technologies and sharing knowledge with the
                community.
            </TypographyP>
        </div>
    </Card>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card class="gap-2">
            <div slot="header">
                <p slot="description">Experience</p>
            </div>
            <div slot="content">
                <div class="space-y-4">
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            Full Stack Developer
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            Codealpha • June 2025 - July 2025
                        </TypographySmall>
                        <TypographyList
                            class="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Summer internship developing full-stack applications",
                                "Built Pubment social media platform with MERN stack",
                                "Developed Prepen e-commerce platform with Next.js",
                            ]}
                        />
                    </div>
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            Freelance Full Stack Developer
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            Remote • 2023 - Present
                        </TypographySmall>
                        <TypographyList
                            class="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Developed Fintraq finance tracking application",
                                "Built modern web applications with Next.js and TypeScript",
                                "Worked with various clients on full-stack solutions",
                            ]}
                        />
                    </div>
                </div>
            </div>
        </Card>

        <Card class="gap-2">
            <div slot="header">
                <p slot="description">Certifications</p>
            </div>
            <div slot="content">
                <div class="space-y-4">
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            Full Stack v3
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            Frontend Masters • March 2025
                        </TypographySmall>
                        <TypographyP class="text-xs mt-2 text-muted-foreground">
                            Comprehensive full-stack development certification
                            covering modern web technologies, backend systems,
                            and deployment strategies.
                        </TypographyP>
                    </div>
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            JavaScript Hard Parts
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            Frontend Masters • February 2025
                        </TypographySmall>
                        <TypographyP class="text-xs mt-2 text-muted-foreground">
                            Advanced JavaScript concepts including closures,
                            prototypes, asynchronous programming, and functional
                            programming principles.
                        </TypographyP>
                    </div>
                </div>
            </div>
        </Card>

        <Card class="gap-2">
            <div slot="header">
                <p slot="description">Education</p>
            </div>
            <div slot="content">
                <div class="space-y-4">
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            Bachelor of Computer Science
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            SZABIST University • 2023 - 2027
                        </TypographySmall>
                        <TypographyList
                            class="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Modern Web Technologies",
                                "Data Structures & Algorithms",
                                "Database Systems",
                            ]}
                        />
                    </div>
                </div>
            </div>
        </Card>

        <Card class="gap-2">
            <div slot="header">
                <p slot="description" class="sr-only">Social</p>
            </div>
            <div slot="content">
                <div class="grid grid-cols-2 gap-4">
                    <a
                        href="https://github.com/hammadmajid"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex flex-col items-center justify-center p-4 rounded-full hover:bg-accent-foreground/10 transition-colors group"
                        aria-label="GitHub"
                    >
                        <svg
                            class="h-8 w-8 mb-2 text-foreground/60 group-hover:text-foreground transition-colors"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                            ></path>
                        </svg>
                        <TypographySmall class="text-xs text-center sr-only"
                            >GitHub</TypographySmall
                        >
                    </a>

                    <a
                        href="https://linkedin.com/in/hammadmajid"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex flex-col items-center justify-center p-4 rounded-full hover:bg-accent-foreground/10 transition-colors group"
                        aria-label="LinkedIn"
                    >
                        <svg
                            class="h-8 w-8 mb-2 text-foreground/60 group-hover:text-foreground transition-colors"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                            ></path>
                        </svg>
                        <TypographySmall class="text-xs text-center sr-only"
                            >LinkedIn</TypographySmall
                        >
                    </a>

                    <a
                        href="https://x.com/hammadmajid_"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex flex-col items-center justify-center p-4 rounded-full hover:bg-accent-foreground/10 transition-colors group"
                        aria-label="Twitter"
                    >
                        <svg
                            class="h-8 w-8 mb-2 text-foreground/60 group-hover:text-foreground transition-colors"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                            ></path>
                        </svg>
                        <TypographySmall class="text-xs text-center sr-only"
                            >Twitter</TypographySmall
                        >
                    </a>

                    <a
                        href="mailto:hammadmajid@proton.me"
                        class="flex flex-col items-center justify-center p-4 rounded-full hover:bg-accent-foreground/10 transition-colors group"
                        aria-label="Email"
                    >
                        <svg
                            class="h-8 w-8 mb-2 text-foreground/60 group-hover:text-foreground transition-colors"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <TypographySmall class="text-xs text-center sr-only"
                            >Email</TypographySmall
                        >
                    </a>
                </div>
            </div>
        </Card>
    </div>
</section>
