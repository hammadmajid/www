---
import {
    Card,
    CardHeader,
    CardTitle,
    CardDescription,
    CardContent,
} from "@/components/ui/card";
import Typography, {
    TypographyH2,
    TypographyH4,
    TypographyP,
    TypographyList,
    TypographySmall,
} from "@/components/typography";
---

<section id="home" class="space-y-6">
    <TypographyH2>About me</TypographyH2>

    <Card className="w-full gap-2">
        <CardHeader>
            <CardDescription> whoami </CardDescription>
        </CardHeader>
        <CardContent>
            <Typography>
                <p>
                    I'm Hammad Majid, a software developer passionate about
                    building scalable and maintainable applications. I enjoy
                    working with modern web technologies and sharing knowledge
                    with the community.
                </p>
            </Typography>
        </CardContent>
    </Card>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card className="gap-2">
            <CardHeader>
                <CardDescription> Experience </CardDescription>
            </CardHeader>
            <CardContent>
                <div class="space-y-4">
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 className="text-sm">
                            Full Stack Developer
                        </TypographyH4>
                        <TypographySmall className="text-muted-foreground">
                            Codealpha • June 2025 - July 2025
                        </TypographySmall>
                        <TypographyList
                            className="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Summer internship developing full-stack applications",
                                "Built Pubment social media platform with MERN stack",
                                "Developed Prepen e-commerce platform with Next.js",
                            ]}
                        />
                    </div>
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 className="text-sm">
                            Freelance Full Stack Developer
                        </TypographyH4>
                        <TypographySmall className="text-muted-foreground">
                            Remote • 2023 - Present
                        </TypographySmall>
                        <TypographyList
                            className="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Developed Fintraq finance tracking application",
                                "Built modern web applications with Next.js and TypeScript",
                                "Worked with various clients on full-stack solutions",
                            ]}
                        />
                    </div>
                </div>
            </CardContent>
        </Card>

        <Card className="gap-2">
            <CardHeader>
                <CardDescription> Education </CardDescription>
            </CardHeader>
            <CardContent>
                <div class="space-y-4">
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 className="text-sm">
                            Bachelor of Computer Science
                        </TypographyH4>
                        <TypographySmall className="text-muted-foreground">
                            SZABIST University • 2023 - 2027
                        </TypographySmall>
                        <TypographyList
                            className="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Modern Web Technologies",
                                "Data Structures & Algorithms",
                                "Database Systems",
                            ]}
                        />
                    </div>
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 className="text-sm">
                            Relevant Certifications
                        </TypographyH4>
                        <TypographySmall className="text-muted-foreground">
                            Frontend Masters • 2025
                        </TypographySmall>
                        <TypographyList
                            className="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Full Stack v3 (March 2025)",
                                "JavaScript Hard Parts (February 2025)",
                            ]}
                        />
                    </div>
                </div>
            </CardContent>
        </Card>
    </div>
</section>
