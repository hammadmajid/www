---
import Card from "@/components/ui/card.astro";
import SocialLinks from "@/components/social-links.astro";
import {
    TypographyH2,
    TypographyH4,
    TypographyP,
    TypographyList,
    TypographySmall,
} from "@/components/typography";
---

<section id="home" class="space-y-6">
    <TypographyH2>About me</TypographyH2>

    <Card class="w-full gap-2 mb-6">
        <p slot="description">whoami</p>
        <div slot="content">
            <TypographyP>
                I'm Hammad Majid, a software developer passionate about building
                scalable and maintainable applications. I enjoy working with
                modern web technologies and sharing knowledge with the
                community.
            </TypographyP>
        </div>
    </Card>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card class="gap-2">
            <p slot="description">Experience</p>
            <div slot="content">
                <div class="space-y-4">
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            Full Stack Developer
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            Codealpha • June 2025 - July 2025
                        </TypographySmall>
                        <TypographyList
                            class="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Summer internship developing full-stack applications",
                                "Built Pubment social media platform with MERN stack",
                                "Developed Prepen e-commerce platform with Next.js",
                            ]}
                        />
                    </div>
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            Freelance Full Stack Developer
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            Remote • 2023 - Present
                        </TypographySmall>
                        <TypographyList
                            class="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Developed Fintraq finance tracking application",
                                "Built modern web applications with Next.js and TypeScript",
                                "Worked with various clients on full-stack solutions",
                            ]}
                        />
                    </div>
                </div>
            </div>
        </Card>

        <Card class="gap-2">
            <p slot="description">Certifications</p>
            <div slot="content">
                <div class="space-y-4">
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            Full Stack v3
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            Frontend Masters • March 2025
                        </TypographySmall>
                        <TypographyP class="text-xs text-muted-foreground">
                            Comprehensive full-stack development certification
                            covering modern web technologies, backend systems,
                            and deployment strategies.
                        </TypographyP>
                    </div>
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            JavaScript Hard Parts
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            Frontend Masters • February 2025
                        </TypographySmall>
                        <TypographyP class="text-xs text-muted-foreground">
                            Advanced JavaScript concepts including closures,
                            prototypes, asynchronous programming, and functional
                            programming principles.
                        </TypographyP>
                    </div>
                </div>
            </div>
        </Card>

        <Card class="gap-2">
            <p slot="description">Education</p>
            <div slot="content">
                <div class="space-y-4">
                    <div class="border-l-2 border-primary/20 pl-4">
                        <TypographyH4 class="text-sm">
                            Bachelor of Computer Science
                        </TypographyH4>
                        <TypographySmall class="text-muted-foreground">
                            SZABIST University • 2023 - 2027
                        </TypographySmall>
                        <TypographyList
                            class="text-xs mt-2 space-y-1 text-muted-foreground"
                            items={[
                                "Modern Web Technologies",
                                "Data Structures & Algorithms",
                                "Database Systems",
                            ]}
                        />
                    </div>
                </div>
            </div>
        </Card>

        <Card class="gap-2">
            <p slot="description" class="sr-only">Social</p>
            <div slot="content">
                <SocialLinks />
            </div>
        </Card>
    </div>
</section>
