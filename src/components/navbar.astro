---
const navigationLinks = [
    { name: "Home", href: "/#home" },
    { name: "Projects", href: "/#projects" },
    { name: "Contact", href: "/#contact" },
];
---

<header class="sticky top-4 z-50 w-full px-4 md:px-6">
    <div
        class="mx-auto max-w-4xl flex h-14 items-center justify-center px-6 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 border border-accent-foreground/20 rounded-full shadow-lg relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-accent-foreground/10 before:via-transparent before:to-transparent before:pointer-events-none"
    >
        <nav class="flex items-center space-x-6">
            {
                navigationLinks.map((link) => (
                    <a
                        href={link.href}
                        class="relative text-sm font-medium text-foreground/80 hover:text-foreground transition-all duration-300 px-3 py-2 rounded-full group overflow-hidden"
                    >
                        <span class="relative z-10">{link.name}</span>
                        <div class="absolute inset-0 bg-background/40 backdrop-blur-sm border border-accent-foreground/20 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 transform scale-75 group-hover:scale-100 shadow-lg"></div>
                    </a>
                ))
            }
        </nav>
    </div>
</header>
