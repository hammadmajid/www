---
import Button from "@/components/ui/button.astro"
import Input from "@/components/ui/input.astro"
import Label from "@/components/ui/label.astro"
import Textarea from "@/components/ui/textarea.astro"
import Send from "@lucide/astro/icons/send"
---

<form action="https://formsubmit.co/hammadmajid@proton.me" method="POST" class="space-y-4 w-full">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
        <div>
            <Label for="name" class="sr-only">Name</Label>
            <Input id="name" name="name" placeholder="Name" required />
        </div>

        <div>
            <Label for="email" class="sr-only">Email</Label>
            <Input id="email" name="email" type="email" placeholder="Email" required />
        </div>
    </div>

    <div>
        <Label for="subject" class="sr-only">Subject</Label>
        <Input
            id="subject"
            name="_subject"
            placeholder="Subject"
            required
        />
    </div>

    <div>
        <Label for="message" class="sr-only">Message</Label>
        <Textarea id="message" name="message" rows="4" placeholder="Message" required />
    </div>

    <Button type="submit">
        <Send class="lucide lucide-send" />
        Send Message
    </Button>
</form>
